<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Developer"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/foto_profil" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="Muhammad Fachry Ramadhan"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fachrydan@gmail.com"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="italic" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_linkedin"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_margin="9dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/linkedin_image"
                android:text="Check LinkedIn"
                android:textAlignment="center"
                android:textColor="@color/colorAccent" />

            <ImageButton
                android:id="@+id/btn_email"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_margin="9dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/gmail_image"
                android:text="Sent Email"
                android:textAlignment="center"
                android:textColor="@color/colorAccent" />

            <ImageButton
                android:id="@+id/btn_instagram"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_margin="9dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/instagram_image"
                android:text="Check Instagram"
                android:textAlignment="center"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="serif-monospace"
            android:text="@string/tujuan_aplikasi"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>